{
    "root": true,
    "plugins": ["tailwindcss"],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "es2023": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "comma-dangle": ["error", "never"],
      "tailwindcss/classnames-order": "error"
    }
  }